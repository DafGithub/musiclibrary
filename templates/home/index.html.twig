{% extends 'base.html.twig' %}

{% block title %}Music Library{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Music Library</h1>
        <p>Blabla</p>
    </div>
    <div class="container-fluid">
        <h2>Les derniers morceaux de musique :</h2>
        <div class="row">
            {% for song in songs %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <h5>{{ song.name }}</h5>
                            </div>
                            <p class="card-text">
                                Dur√©e : {{ song.lenght }} sec
                            </p>
                            <p class="card-texte">
                                Artiste :

                                {% for artist in song.artists %}
                                    {{ artist.alias }}
                                {% endfor %}

                            </p>
                            <p class="card-texte">
                                Label :

                                {% for style in song.styles %}
                                    {{ style.title }}

                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
