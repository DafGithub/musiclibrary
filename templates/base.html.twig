<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>


<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <a class="navbar-brand" href="{{ path('home') }}">Music Library</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a href="{{ path('song') }}"
                   class="nav-link {% if current_menu is defined and current_menu == 'songs' %}active{% endif %}">Search</a>
            </li>
        </ul>
        <ul class="navbar-nav">

            {% if app.user %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ path('logout') }}" class="nav-link">Logout</a>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="{{ path('app_login') }}" class="nav-link">Login</a>
                    </li>
                </ul>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a href="{{ path('easyadmin') }}" class="nav-link">Admin</a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                    <a href="{{ path('profile') }}" class="nav-link">Profile</a>
                </li>
                <li>
                    <a href="{{ path('basket') }}" class="nav-link">Basket</a>
                </li>
            {% endif %}

        </ul>
    </div>
</nav>

{% for message in app.session.flashBag.get('success') %}

        <div class="alert alert-success alert-dismissible fade show fixed-top" style="width: 20%; text-align: center; margin: auto" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

{% endfor %}

{% block body %}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://unpkg.com/wavesurfer.js"></script>
    <script src="https://unpkg.com/wavesurfer.js/dist/plugin/wavesurfer.cursor.min.js"></script>
    <script src="https://unpkg.com/wavesurfer.js/dist/plugin/wavesurfer.regions.min.js"></script>

{% endblock %}
</body>

</html>
